<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/row_background"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="5">

        <projects.mostafagad.task.customviews.English_NumberTextView
            android:id="@+id/Post_row_TextView_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/Postsrow.TextView.id"
            android:textColor="@color/White"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:weightSum="4">

            <projects.mostafagad.task.customviews.English_TextView
                android:id="@+id/Post_row_TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:gravity="center"
                android:hint="@string/Postsrow.TextView.title"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="10sp" />


            <projects.mostafagad.task.customviews.English_TextView
                android:id="@+id/Post_row_TextView_Body"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="3"
                android:background="@drawable/shadow"
                android:gravity="start"
                android:lines="2"
                android:minEms="8"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/Black" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>